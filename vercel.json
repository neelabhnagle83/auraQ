{
  "version": 2,
  "builds": [
    {
      "src": "backend/requirements.txt",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/pages/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "/backend/run.py" },
    { "src": "/(.*)", "dest": "/frontend/pages/$1" }
  ]
}
